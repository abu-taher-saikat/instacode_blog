    <title>Insta_code by Saikat</title>
</head>

<body>

    <% if (user) { %>
    <%- include('partials/header.ejs', {user : user}) %>
    <% } else { %> 
        <%- include('partials/header.ejs') %>
    <% } %> 


    <!-- top Blog section -->
    <div class="upper-double-blog">
        <%  if( i = 0 ) { %>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 ">
                        <img src="img/men1.png" width="100%" alt="">
                    </div>
                    <div class="col-md-6 d-flex">
                        <div class="blog-content-section">
                            <div class="blog-heading"> <%= blogs.title[i]  %> 
                            </div>
                            <div class="blog-content"><%= blogs.description[i]  %> </div>
                            <div class="tag_and_navigation d-flex">
                                <p> <%= blogs.timeCreated[i] %> </p>
                                <p>8 min read</p>
                                <p>Analytics</p>
                            </div>
                            <div class="blog-content-author">
                                <div class="row">
                                    <div class="col d-flex align-items-end">
                                        <img class="mr-4" src="img/lady1.png" alt="">
                                        <p class="pr-4">Alfred Lua</p>
                                        <p class="">Product Marketing @instacode</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
    </div>
    <!-- /top Blog section -->

    <hr>

    <a href="/blog/new" class="btn btn-primary-outline"> Create New Blog</a>

    <div class="blog-bottom-divs">
        <div class="container">
            <div class="row">
                <div class="col-md-10 px-0">
                    <div class="container">
                        <div class="row">

                            <% blogs.forEach(blog => {  %> 
                            <div class="col-md-6">
                                <div class="bottom-blog-section">

                                    <% if(blog.img) { %> 
                                        <img width="100%" class="main-image" src="/uploads/images/<%= blog.img %>" alt="">
                                        <% } else {  %> 
                                            <img width="100%" src="/img/cd-background-img.jpg" alt="">
                                    <% } %> 

                                    <a href="blog/<%= blog.slug %> ">
                                        <div class="blog-heading"> <%= blog.title %> </div>
                                    </a>

                                    <div class="tag_and_navigation">
                                        <p><%= blog.timeCreated.toLocaleDateString() %></p>
                                        <p>8 min read</p>
                                        <p class="badge badge-warning">Analytics</p>
                                    </div>
                                    <div class="blog-content"><%= blog.snippet %> </div>
                                    <div class="blog-content-author">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <img src="img/lady1.png" alt="">
                                            </div>
                                            <div class="col-md-10 author-inform-container">
                                                <p class="auther-name"><%= blog.author  %> </p>
                                                <p class="auther-position">Product Marketing @instacode</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %> 

                        </div>
                    </div>
                </div>
               
                <!-- here -->

                <div class="col-md-2">

                </div>
            </div>
        </div>
    </div>










    <!-- Footer Section -->
    <%- include('partials/footer.ejs') %>
    <!-- /Footer Section -->









