    <section style="height: 5rem;"></section>
    <section class="show-page">
        <!-- header -->
        <%- include('partials/header')  %>
        <!-- header  -->

        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <!-- title -->
                    <div class="title">
                       <h1 class="heading"><%= blog.title  %></h1> 
                    </div>

                    <!-- image -->
                    <div class="img-section">
                        <% if(blog.img){  %>
                        <img src="/uploads/images/<%= blog.img %>" class="card-img" alt="..." />
                        <% }else {  %>
                        <h1>no image</h1>
                        <% } %>
                    </div>

                    <!-- auther information section -->
                    <div class="author">
                        <% if(blog.img) {%> 
                        <img src="/uploads/images/<%= blog.img %>" class="rounded-circle"
                        style="width: 50px; height: 50px" />
                        <% } %> 
                        <span><b> <%= blog.author %></b></span>
                        <span class="pl-2">posted at : <%= blog.timeCreated.toLocaleDateString() %> </span>

                        <% if(user) {%>
                           <span><a href="/blog/edit/<%= blog.id %> ">edit post</a>   </span>
                           <form action="/blog/<%= blog.id %>?_method=DELETE" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        <% } %> 

                    </div>

                    <div class="description">
                        <%- blog.description %>
                    </div>

                </div>
                <div class="col-md-3"></div>
            </div>
        </div>


    </section>



